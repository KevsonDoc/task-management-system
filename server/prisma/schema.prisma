generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id()
  name        String
  email       String        @unique
  password    String
  UserProject UserProject[]
  UserTask    UserTask[]
}

model UserProject {
  id         String        @id() @default(uuid())
  userId     String
  projectId  String
  createAt   DateTime      @default(now())
  deletedAt  DateTime
  user       User          @relation(fields: [userId], references: [id])
  project    Project       @relation(fields: [projectId], references: [id])
  permission Permissions[]
}

model Project {
  id          String        @id() @default(uuid())
  title       String
  description String        @db.Text
  createdAt   DateTime
  endDate     DateTime
  task        Task[]
  userProject UserProject[]
}

model Task {
  id          String     @id() @default(uuid())
  title       String
  description String     @db.Text
  projectId   String?
  createdAt   DateTime
  endDate     DateTime
  deletedAt   DateTime
  priority    Priority   @default(BACKLOG)
  userTask    UserTask[]
  project     Project?   @relation(fields: [projectId], references: [id])
}

model UserTask {
  id         String        @id() @default(uuid())
  userId     String
  taskId     String
  createAt   DateTime      @default(now())
  deletedAt  DateTime
  user       User          @relation(fields: [userId], references: [id])
  permission Permissions[]
  task       Task          @relation(fields: [taskId], references: [id])
}

enum Priority {
  BACKLOG
  TODO
  IN_DEVELOPMENT
  IN_REVIEW
  TESTING
  DONE
}

model Permissions {
  id          String        @id() @default(uuid())
  name        String
  userProject UserProject[]
  userTask    UserTask[]
}
